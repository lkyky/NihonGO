<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.THome.TLesson1.TLesson1Pg2">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:contentDescription="@string/btnClose"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        app:srcCompat="@drawable/ic_close">
    </ImageView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tLesson1Pg2CardView"
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/txtTLesson1Pg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTLesson1Pg2"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/btnSound"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:contentDescription="@string/btnSound"
                        android:focusable="true"
                        app:srcCompat="@drawable/ic_sound"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/txtTLesson1Pg2Ex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTLesson1Pg2Ex"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textColor="@color/dark_pink"/>

                    <ImageView
                        android:id="@+id/btnSound2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:contentDescription="@string/btnSound2"
                        android:focusable="true"
                        app:srcCompat="@drawable/ic_sound"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgGoodmorning"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/imgGoodmorning"
                        app:srcCompat="@drawable/goodmorning"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/naviButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tLesson1Pg2CardView"
        app:layout_constraintStart_toStartOf="@+id/tLesson1Pg2CardView"
        app:layout_constraintTop_toBottomOf="@+id/tLesson1Pg2CardView">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="225dp"
            android:clickable="true"
            android:contentDescription="@string/btnBack"
            android:focusable="true"
            app:srcCompat="@drawable/ic_arrow_back"/>

        <ImageView
            android:id="@+id/btnForward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:contentDescription="@string/btnForward"
            android:focusable="true"
            app:srcCompat="@drawable/ic_arrow_forward"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>